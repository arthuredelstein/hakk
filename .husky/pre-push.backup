#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🧪 Running pre-push tests..."
echo "================================"

# Run linting and tests
npm run test:ci

if [ $? -eq 0 ]; then
    echo "✅ All tests passed! Proceeding with push..."
    echo "================================"
    exit 0
else
    echo "❌ Tests failed! Push aborted."
    echo "💡 Fix the failing tests and try again."
    echo "================================"
    exit 1
fi
